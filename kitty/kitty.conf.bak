# vim:fileencoding=utf-8:foldmethod=markerkitt

# mac navigation
map alt+left send_text all \x1b\x62
map alt+right send_text all \x1b\x66

hide_window_decorations yes

# Check update every 7 days
update_check_interval 168

# background_tint 1
# background_tint 1
italic_font   Monaspace Argon Light
font_family   Monaspace Argon Extra Light
bold_font     Monaspace Argon Light

background_opacity 0.96
background_blur 15
# background_opacity 1
# background_image ~/.config/kitty/bg-sky.png
# background_image_layout scaled

font_size 11.65
modify_font cell_height 120%

enable_audio_bell no

placement_strategy center

# BEGIN_KITTY_THEME
# Catppuccin-Mocha
include current-theme.conf
# END_KITTY_THEME
