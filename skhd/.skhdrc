# Link this file to ~/.skhdrc
# alt is option on macos

# Change active window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# float / unfloat window and center on screen
alt - f : yabai -m window --toggle float --grid 20:20:1:1:18:18
alt + shift - f : yabai -m window --toggle float --grid 1:1:1:1:1:1

# Change placement of window on screen
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Rotate display by 90 deg
shift + alt - r : yabai -m space --rotate 90

# Move window to different spaces
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5

# Open kitty terminal
cmd - k : open -a /Applications/kitty.app/Contents/MacOS/kitty
cmd - b : open -a /Applications/Brave\ Browser.app/Contents/MacOS/Brave\ Browser

shift + alt - up : yabai -m window --resize right:-40:0 2> /dev/null || yabai -m window --resize left:-40:0 2> /dev/null
shift + alt - down : yabai -m window --resize right:40:0 2> /dev/null || yabai -m window --resize left:40:0 2> /dev/null
